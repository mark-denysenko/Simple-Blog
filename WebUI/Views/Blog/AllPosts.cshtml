@using WebUI.Models.BlogModels;
@using WebUI.HtmlHelpers;
@model PostListViewModel

@{
    ViewBag.Title = "AllPosts";
}

<div class="blog">
    <h2>All Posts</h2>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @foreach (var post in Model.Posts)
                {
                    @Html.Partial("_PostPreview", post)
                    <hr />
                }
                <div class="btn-group pull-right">
                    @Html.PageLinks(Model.PagingInfo, x => Url.Action("AllPosts", new { page = x }))
                </div>
            </div>
        </div>
    </div>
</div>

