@model BusinessLayer.BusinessModelsDTO.PostDTO

<div class="post-preview">
    <a href="@Url.Action("PostInfo", new { id = Model.PostId })">
        <h2 class="post-title">@Model.Title</h2>
    </a>
    <p class="post-meta">Posted by <span class="author">@Model.Author</span> on @Model.Date.ToLocalTime().ToShortDateString()</p>
</div>